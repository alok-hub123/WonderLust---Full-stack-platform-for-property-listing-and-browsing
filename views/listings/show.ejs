<% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col-8 offset-3">
            <h3><b>
                    <%= listing.title %>
                </b> <br> <br> </h3>
        </div>
        <div class="card listing-card col-6 offset-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="listings-image">
            <div class="card-body">
                <p class="card-text">
                    <%= listing.description %>" <br>
                        &#8377;<%= listing.price %> <br>
                            <%= listing.location %> <br>
                                <%= listing.country %> <br>
                </p>
            </div>
        </div>

        <div class="btns mb-3">
            <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark add-btn col-1 offset-3">Edit</a>

            <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-dark offset-5">Delete</button>
            </form>
        </div>

        <hr />

        <div class="col-8 offset-3">
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" min="1" max="5" id="rating" name="review[rating]" class="form-range" />
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea id="comment" name="review[comment]" cols="30" rows="5" placeholder="Enter your review"
                        class="form-control" required></textarea>
                    <div class="invalid-feedback">Please enter a valid review</div>
                </div>
                <button class="btn btn-outline-dark mb-3">Submit</button>
            </form>
        </div>

        <hr />

        <div class="col-8 offset-3">
            <h4>Reviews</h4>
            <div class="row">
                <% if (listing.reviews.length===0) { %>
                    <p>No reviews yet.</p>
                <% } else { %>
                    <% listing.reviews.forEach((review)=> { %>
                        <div class="ms-3 card mb-3 p-3 col-5 ">
                            <div class="card-body">
                                <h5 class="card-title">
                                    Unknown User
                                </h5>
                                <p class="card-text">
                                    <%= review.comment %>
                                </p>
                                <p class="card-text">
                                    <%= review.rating %> <i class="fas fa-star"></i>
                                </p>
                            </div>
                            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mb-3">
                                <button class="btn btn-sm btn-dark">Delete</button>
                            </form>
                        </div>
                    <% }); %>
                <% } %>
            </div>
        </div>