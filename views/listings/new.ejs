<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a new Listing</h3>
    <form
      action="/listings"
      method="POST"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          type="text"
          name="listings[title]"
          class="form-control"
          placeholder="Add a catchy title"
          required
        />
        <div class="valid-feedback">Title looks good!</div>
        <div class="invalid-feedback">Please enter a valid Title</div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          name="listings[description]"
          class="form-control"
          placeholder="Enter decription"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Please enter a valid decription</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" name="listings[image]" class="form-control" required />
        <div class="invalid-feedback">Please upload a valid Image</div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            type="text"
            name="listings[price]"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Please enter a valid Price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            type="text"
            name="listings[country]"
            class="form-control"
            placeholder="India"
            required
          />
          <div class="invalid-feedback">Please enter a valid Country name</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          type="text"
          name="listings[location]"
          class="form-control"
          placeholder="Nallasopara"
          required
        />
        <div class="invalid-feedback">Please enter a valid Location</div>
      </div>

      <button class="btn btn-dark mb-3 add-btn">ADD</button>
    </form>
  </div>
</div>
